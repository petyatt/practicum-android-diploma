<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_bold_32" >
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="text_medium_22" >
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="text_medium_16" >
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="text_regular_16" >
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="text_regular_12" >
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_top_bar" parent="text_medium_22">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_64</item>
        <item name="android:paddingHorizontal">@dimen/dimen_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_search" parent="text_medium_16">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:minHeight">@dimen/dimen_56</item>
        <item name="android:paddingHorizontal">@dimen/dimen_16</item>
        <item name="android:paddingVertical">@dimen/dimen_8</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/edit_search_background</item>
        <item name="android:textCursorDrawable">@drawable/edit_search_cursor</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">@dimen/dimen_36</item>
        <item name="android:layout_height">@dimen/dimen_36</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <dimen name="dimen_0">0dp</dimen>
    <dimen name="dimen_64">64dp</dimen>
    <dimen name="dimen_36">36dp</dimen>
</resources>
